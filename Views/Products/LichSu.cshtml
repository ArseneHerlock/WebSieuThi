@model IEnumerable<DoAn.Models.Order>

@{
    ViewBag.Title = "LichSu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">

    <div class="text-center mb-5">
        <h2 class="fw-bold text-uppercase" style="font-family: 'Playfair Display', serif; color: #333;">Lịch sử đơn hàng</h2>
        <div style="width: 80px; height: 3px; background-color: #80b435; margin: 15px auto;"></div>
        <p class="text-muted">Theo dõi trạng thái và xem lại các giao dịch trước đây của bạn</p>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-muted fw-semibold">Mã đơn hàng</th>
                        <th class="py-3 text-muted fw-semibold">Ngày đặt</th>
                        <th class="py-3 text-muted fw-semibold">Tổng tiền</th>
                        <th class="py-3 text-muted fw-semibold">Trạng thái</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold text-dark">#@item.OrderID</span>
                            </td>
                                <td class="text-secondary">@(item.OrderDate)</td>
                            <td>
                                <span class="fw-bold text-danger">@(((decimal)item.TotalAmount).ToString("#,##0", new System.Globalization.CultureInfo("vi-VN"))) VNĐ</span>
                            </td>
                            <td>
                                <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2 rounded-pill">
                                    <i class="fa fa-check-circle me-1"></i> @item.OrderStatus
                                </span>
                            </td>
                            
                        </tr>
                    }


                    
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index","Products")" class="text-decoration-none text-muted fw-medium">
            <i class="fa fa-long-arrow-left me-2"></i> Tiếp tục mua sắm
        </a>
    </div>
</div>