@model DoAn.Models.Order

@{
    ViewBag.Title = "Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow">
                <div class="card-body p-4 text-center">

                    <!-- Icon -->
                    <div class="mb-3">
                        <i class="fa-solid fa-circle-check text-success" style="font-size:72px"></i>
                    </div>

                    <!-- Title -->
                    <h4 class="fw-bold mb-3">Đặt hàng thành công</h4>
                    <p class="text-muted mb-4">
                        Cảm ơn bạn đã mua hàng. Đơn hàng của bạn đã được ghi nhận.
                    </p>

                    <!-- Order Info -->
                    <div class="text-start mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Mã đơn hàng</span>
                            <span class="fw-semibold">#@Model.OrderID</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Tổng tiền</span>
                            <span class="fw-bold text-danger">
                                @(((decimal)Model.TotalAmount).ToString("#,##0", new System.Globalization.CultureInfo("vi-VN"))) VNĐ

                            </span>
                        </div>
                    </div>

                   
                    <a href="@Url.Action("Index","Products")"
                       class="btn btn-success w-100 mt-3">
                        Tiếp tục mua sắm
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>
