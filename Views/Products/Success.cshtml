@model DoAn.Models.Order

@{
    ViewBag.Title = "Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 text-center">

            <div style="margin-bottom: 30px;">
                <i class="zmdi zmdi-check-circle text-success" style="font-size: 100px; color: #80b435;"></i>
            </div>

            <h1 style="font-family: 'Playfair Display', serif; font-weight: 700; color: #333; margin-bottom: 20px;">
                Đặt hàng thành công!
            </h1>

            <p style="font-size: 16px; color: #666; line-height: 1.6; margin-bottom: 30px;">
                Cảm ơn bạn đã tin tưởng <strong>FreshMart</strong>. <br />
                Đơn hàng của bạn đã được tiếp nhận và đang trong quá trình xử lý.
            </p>

            <div style="background: #f9f9f9; border-radius: 15px; padding: 25px; text-align: left; margin-bottom: 40px; border: 1px solid #eee;">
                <table class="table" style="margin-bottom: 0;">
                    <tbody>
                        <tr>
                            <td style="border: none; color: #888;">Mã đơn hàng:</td>
                            <td style="border: none; text-align: right; font-weight: bold;">
                                #@(Model != null ? Model.OrderID.ToString() : DateTime.Now.Ticks.ToString().Substring(10))
                            </td>
                        </tr>
                        <tr>
                            <td style="border: none; color: #888;">Trạng thái:</td>
                            <td style="border: none; text-align: right;">
                                <span style="background-color: #80b435; color: white; padding: 3px 12px; border-radius: 20px; font-size: 12px;">@Model.OrderStatus</span>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: none; color: #888;">Dự kiến giao hàng:</td>
                            <td style="border: none; text-align: right; font-weight: bold;">2-3 ngày làm việc</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary"
                       style="background-color: #80b435; border: none; padding: 12px 30px; border-radius: 30px; font-weight: bold; margin-right: 10px; margin-bottom: 10px; display: inline-block;">
                        <i class="fa fa-shopping-cart"></i> TIẾP TỤC MUA SẮM
                    </a>

                    <a href="/" class="btn btn-default"
                       style="padding: 12px 30px; border-radius: 30px; font-weight: bold; margin-bottom: 10px; display: inline-block;">
                        XEM ĐƠN HÀNG
                    </a>
                </div>
            </div>

            <div style="margin-top: 50px; padding-top: 20px; border-top: 1px solid #eee;">
                <p style="color: #999; font-size: 13px;">
                    Bạn cần hỗ trợ ngay? Gọi cho chúng tôi tại <br />
                    <span style="font-size: 18px; color: #333; font-weight: bold;">0123-456-78910</span>
                </p>
            </div>

        </div>
    </div>
</div>