@model DoAn.Models.Product
@{
    ViewBag.Title = "Edit_SP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-md-10 p-4">

    <h3>Sửa sản phẩm</h3>

    <div class="card">
        <div class="card-body">
            <form action="/Products/Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <!-- Hidden ProductID -->
                <input type="hidden" name="ProductID" value="@Model.ProductID" />

                <div class="row g-3">

                    <!-- Tên sản phẩm -->
                    <div class="col-md-6">
                        <label class="form-label">Tên sản phẩm</label>
                        <input type="text" class="form-control" name="ProductName" value="@Model.ProductName" required />
                    </div>

                    <!-- Giá -->
                    <div class="col-md-3">
                        <label class="form-label">Giá</label>
                        <input type="text" class="form-control" name="Price" value="@Model.Price.ToString("#,##0", new System.Globalization.CultureInfo("vi-VN"))" required />
                    </div>
                    <!-- Giá -->
                    <div class="col-md-3">
                        <label class="form-label">Giảm Giá</label>
                        <input type="number"class="form-control" name="Discount" value="@Model.Discount" required />
                    </div>

                    <!-- Loại -->
                    <div class="col-md-3">
                        <label class="form-label">Loại</label>
                        <select class="form-select" name="CategoryID" required>
                            <option value="">-- Chọn loại --</option>
                            @foreach (var cg in ViewBag.CategoryID as SelectList)
                            {
                                var selected = (cg.Value == Model.CategoryID.ToString()) ? "selected" : "";
                                <option value="@cg.Value" @selected>@cg.Text</option>
                            }
                        </select>
                    </div>

                    <!-- Số lượng tồn -->
                    <div class="col-md-3">
                        <label class="form-label">Số lượng tồn</label>
                        <input type="number" class="form-control" name="SoLuongTon" value="@(Model.SoLuongTon??0)" />
                    </div>

                    <!-- Đã bán -->
                    <div class="col-md-3">
                        <label class="form-label">Đã bán</label>
                        <input type="number" name="SoLuongBan" class="form-control" value="@(Model.SoLuongBan??0)" readonly />
                    </div>

                    <!-- Ảnh hiện tại -->
                    <div class="col-md-6">
                        <label class="form-label">Ảnh hiện tại</label><br>
                        <img src="~/img/product/@Model.ImageURL" width="120" class="mb-2" />
                        <input type="file" class="form-control" name="ImgFile" />
                    </div>

                    <!-- Trạng thái -->
                    <div class="col-md-3">
                        <label class="form-label">Trạng thái</label><br />
                        <input type="radio" name="Status" value="true" @(Model.Status == true ? "checked" : "") /> Bán
                        <input type="radio" name="Status" value="false" class="ms-3" @(Model.Status == false ? "checked" : "") /> Ngưng
                    </div>

                    <!-- Buttons -->
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success">Cập nhật</button>
                        <a href="@Url.Action("SanPham_Admin","Products")" class="btn btn-secondary">Quay lại</a>
                    </div>

                </div>
            </form>
        </div>
    </div>

</div>


<div>
    @Html.ActionLink("Back to List", "SanPham_Admin")
</div>

