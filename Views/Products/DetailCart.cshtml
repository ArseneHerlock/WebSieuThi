@model IEnumerable<DoAn.Models.Product>

@{
    ViewBag.Title = "DetailCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var giohang = new Dictionary<int, DoAn.Models.AddToCart>();
    if (Session["giohang"]!=null)
    {
        giohang = (Dictionary<int, DoAn.Models.AddToCart>)Session["giohang"];
    }
    decimal tongtien = 0;
}

<div id="content" class="site-content">
    <!-- Breadcrumb -->
    <div id="breadcrumb">
        <div class="container">
            <h2 class="title">Shopping Cart</h2>

            <ul class="breadcrumb">
                <li><a href="#" title="Home">Home</a></li>
                <li><span>Shopping Cart</span></li>
            </ul>
        </div>
    </div>

    <div class="container">
        <div class="page-cart">
            <div class="table-responsive">
                <table class="cart-summary table table-bordered">
                    <thead>
                        <tr>
                            <th class="width-20">&nbsp;</th>
                            <th class="width-80 text-center">Image</th>
                            <th>Name</th>
                            <th class="width-100 text-center">Unit price</th>
                            <th class="width-100 text-center">Qty</th>
                            <th class="width-100 text-center">Total</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            tongtien = item.Price * (decimal)giohang[item.ProductID].Quantity;
                            <tr>
                                <td class="product-remove">
                                    <a title="Remove this item" class="remove" href="@Url.Action("DelItemCart", "Products", new {id=item.ProductID})">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="product-detail-left-sidebar.html">
                                        <img width="80" alt="Product Image" class="img-responsive" src="/img/product/@item.ImageURL">
                                    </a>
                                </td>
                                <td>
                                    <a href="product-detail-left-sidebar.html" class="product-name">@item.ProductName</a>
                                </td>
                                <td class="text-center">
                                    @item.Price.ToString("#,##0", new System.Globalization.CultureInfo("vi-VN")) VNĐ
                                </td>
                                <td>
                                    <div class="product-quantity">
                                        <div class="qty">
                                            <span>@giohang[item.ProductID].Quantity</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    @((item.Price * (decimal)giohang[item.ProductID].Quantity).ToString("#,##0", new System.Globalization.CultureInfo("vi-VN")))

                                </td>
                            </tr>
                        }


                        
                    </tbody>

                    <tfoot>
                        <tr class="cart-total">
                            <td rowspan="3" colspan="3"></td>
                            <td colspan="2" class="text-right">Total products</td>
                            <td colspan="1" class="text-center">@tongtien</td>
                        </tr>
                        <tr class="cart-total">
                            <td colspan="2" class="text-right">Total shipping</td>
                            <td colspan="1" class="text-center">Free ship</td>
                        </tr>
                        <tr class="cart-total">
                            <td colspan="2" class="total text-right">Total</td>
                            <td colspan="1" class="total text-center">@tongtien</td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="checkout-btn">
                <a href="@Url.Action("CheckOut","Products")" class="btn btn-primary pull-right" title="Proceed to checkout">
                    <span>Proceed to checkout</span>
                    <i class="fa fa-angle-right ml-xs"></i>
                </a>
            </div>
        </div>
    </div>
</div>