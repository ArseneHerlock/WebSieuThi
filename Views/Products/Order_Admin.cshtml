@model IEnumerable<DoAn.Models.Order>

@{
    ViewBag.Title = "Order_Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-10 p-4">

    <h3>Quan ly don hang</h3>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-success p-3">
                <h6>So don hom nay</h6>
                <h3>18</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success p-3">
                <h6>Doanh thu</h6>
                <h3>15,200,000</h3>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-success text-white">Danh sach don</div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead class="table-success">
                    <tr>
                        <th>Mã Đơn Hàng</th>
                        <th>Khách Hàng</th>
                        <th>Tổng Thành Tiền</th>
                        <th>Trạng Thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.OrderID</td>
                            <td>@item.UserAccount.FullName</td>
                            <td>@item.TotalAmount</td>
                            @using (Html.BeginForm("Order_Admin", "Products", FormMethod.Post))
                            {
                                
                                <td>
                                    <input type="hidden" name="id" value="@item.OrderID"/>
                                    <select class="form-select form-select-sm" name="OrderStatus">
                                        
                                        <option value="1">Chờ Xử Lý</option>
                                        <option value="2">Đã giao đơn</option>
                                    </select>
                                </td>
                                <td><button class="btn btn-sm btn-success" type="submit">Cập Nhật</button></td>
                            }

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>